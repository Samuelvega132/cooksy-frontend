{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "regions": ["iad1"],
  "functions": {
    "src/app/**": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/recipes",
      "destination": "/recipes"
    }
  ],
  "headers": [
    {
      "source": "/recipes",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
